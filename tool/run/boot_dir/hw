source  [genode_dir]/tool/run/boot_dir/hw


rename bootstrap_link_address orig_bootstrap_link_address


proc bootstrap_link_address { } {

	if {[have_board arndale]}   { return "0x88000000" }
	if {[have_board odroid_xu]} { return "0x88000000" }
	if {[have_board panda]}     { return "0x88000000" }

	return [orig_bootstrap_link_address]
}


rename base_src orig_base_src


proc base_src { } {

	if {[have_board arndale]}   { return base-hw-arndale   }
	if {[have_board odroid_xu]} { return base-hw-odroid_xu }
	if {[have_board panda]}     { return base-hw-panda     }

	return [orig_base_src]
}
